---
import {USERS} from '../types/users'
---
<div class="flex flex-col flex-1">
  <!-- Top bar -->
  <div class="flex justify-between items-center bg-white shadow-sm px-6 py-3 rounded-lg">
    <!-- Botón menú -->

    <!-- Toggle de tema -->
    <div class="flex items-center gap-2 bg-gray-100 px-3 py-1 rounded-full">
      <span class="material-symbols-sharp text-yellow-500 cursor-pointer active">light_mode</span>
      <span class="material-symbols-sharp text-gray-500 cursor-pointer">dark_mode</span>
    </div>

    <!-- Perfil -->
    <div class="flex items-center gap-4">
      <div class="text-right">
        <p class="text-sm text-gray-700">Hey, welcome back</p>
        <small class="text-gray-500 font-semibold">{USERS.rol}</small>
      </div>
      <div class="w-10 h-10 rounded-full overflow-hidden border-2 border-gray-200">
        <img src="/images/logo.png" alt="Profile" class="w-full h-full object-cover" />
      </div>
    </div>
  </div>
</div>
